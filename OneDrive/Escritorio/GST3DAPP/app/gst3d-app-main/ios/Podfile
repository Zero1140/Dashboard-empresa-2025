# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Configuración para máxima compatibilidad iOS
platform :ios, '12.0'
prepare_react_native_project!

pod 'Firebase', :modular_headers => true
pod 'FirebaseCoreInternal', :modular_headers => true
pod 'GoogleUtilities', :modular_headers => true
pod 'FirebaseCore', :modular_headers => true

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
else
  use_frameworks! :linkage => :static
end

target 'com.wichisoft.gst3d' do
  config = use_native_modules!
  
  # Firebase dependencies - Compatible con iOS 12.0+
  pod 'Firebase/Core', :modular_headers => true
  pod 'Firebase/Auth', :modular_headers => true
  pod 'Firebase/Messaging', :modular_headers => true
  
  # Dependencias adicionales para compatibilidad universal
  pod 'Firebase/Analytics', :modular_headers => true
  pod 'Firebase/Installations', :modular_headers => true

  # use_frameworks! :linkage => :static
  # $RNFirebaseAsStaticFramework = true

  # https://github.com/facebook/react-native/actions/runs/11448729558/job/31852872319
  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  target 'MyFirstAppTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # Configuración para máxima compatibilidad iOS
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Configuración para compatibilidad con todas las versiones de iOS
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Exclude arm64 for simulator to avoid issues with Apple Silicon
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = "arm64"
        
        # Configuración para compatibilidad universal
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        
        # Configuración para versiones antiguas de iOS
        if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 13.0
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'IOS_VERSION_12_SUPPORT=1'
        end
        
        # Configuración para iOS 14+
        if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f >= 14.0
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'IOS_VERSION_14_SUPPORT=1'
        end
      end
    end
  end
end
